<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="PI" value="3.1415926"/>
  <xacro:macro name="caster_back_joint_macro"
               params="caster_back parent
                       x y z roll pitch yaw">
    <joint name="${caster_back}_steering_joint" type="continuous">
      <parent link="${parent}_link"/>
      <child  link="${caster_back}_steering_link"/>
      <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="10"/>
    </joint>
    <joint name="${caster_back}_joint" type="continuous">
      <parent link="${caster_back}_steering_link"/>
      <child  link="${caster_back}_link"/>
      <origin xyz="-0.2 0 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="caster_back_link_macro"
               params="caster_back
                       x y z roll pitch yaw">
    <xacro:property name="MESH_FILE" value="package://vehicle/xacro/meshes/tire.dae"/>
    <xacro:property name="SCALE" value="0.10"/>
    <link name="${caster_back}_steering_link"/>
    <link name="${caster_back}_link">
      <visual>
        <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw+PI/2}"/>
        <geometry>
          <mesh filename="${MESH_FILE}" scale="${SCALE} ${SCALE} ${SCALE}"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw+PI/2}"/>
        <geometry>
          <mesh filename="${MESH_FILE}" scale="${SCALE} ${SCALE} ${SCALE}"/>
        </geometry>
        <!-- <origin xyz="0.0  0.001  0.0" rpy="0.0  0.0  0.0"/>
        <geometry>
          <box size="0.030  0.009  0.020"/>
        </geometry> -->
      </collision>
      <inertial>
        <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw+PI/2}"/>
        <mass value="0.005" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        <!-- <mass value="5.0" />
        <inertia ixx="0.01517" ixy="0.0" ixz="0.0" iyy="0.01517" iyz="0.0" izz="0.02500"/> -->
      </inertial>
    </link>
  </xacro:macro>
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="caster_back_steering_joint">
      <command_interface name="position">
        <param name="min">-1.57</param>
        <param name="max">1.57</param>
      </command_interface>
      <state_interface name="position"/>
    </joint>
  </ros2_control>
</robot>
